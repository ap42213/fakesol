# Solana RPC Configuration
# QuickNode highly recommended for better rate limits and airdrop reliability
# Get your free endpoint at: https://quicknode.com
# Example: https://your-endpoint.solana-devnet.quiknode.pro/YOUR_KEY/
SOLANA_RPC_URL=https://api.devnet.solana.com

# Optional treasury-backed faucet (base58 secret key)
TREASURY_SECRET_KEY="base58-secret-key"
TREASURY_MAX_SOL=1
TREASURY_COOLDOWN_MS=30000
TREASURY_PUBLIC_KEY="optional-pubkey-if-you-don't-want-to-derive-from-secret"

# Automated refill (optional; used by npm run refill:treasury)
# Tries multiple airdrops per run up to REFILL_TARGET_SOL, respecting faucet rate limits
REFILL_TARGET_SOL=5
REFILL_SINGLE_AIRDROP_SOL=5
REFILL_MAX_ATTEMPTS=2
REFILL_PAUSE_MS=4000
REFILL_MIN_BALANCE_SOL=0

# Server Configuration
PORT=3001
NODE_ENV=development

# Rate Limiting
AIRDROP_COOLDOWN_MS=15000

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fakesol?schema=public"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key!"

# Admin API
ADMIN_API_KEY="your-admin-api-key-change-in-production"

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL="http://localhost:5173"
API_URL="http://localhost:3001"

# Google OAuth (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Solana RPC Configuration
# Use custom RPC for better rate limits (optional)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Server Configuration
PORT=3001
NODE_ENV=development

# Rate Limiting
AIRDROP_COOLDOWN_MS=60000

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fakesol?schema=public"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key!"

# Admin API
ADMIN_API_KEY="your-admin-api-key-change-in-production"

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL="http://localhost:5173"
API_URL="http://localhost:3001"

# Google OAuth (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
